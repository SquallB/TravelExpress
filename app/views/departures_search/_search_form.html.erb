<div class="row">

  <div class="col-lg-12">
    <!-- Nav tabs -->
    <div class="tm-home-box-research tm-home-box-1-center">
      <ul class="nav nav-tabs tm-white-bg" role="tablist" id="hotelCarTabs">
        <li role="presentation" >
          <a href="#car" aria-controls="car" role="tab" class="active">Research Travel</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade tm-white-bg active in" id="car">
          <div class="tm-search-box effect2">

            <%= form_for(@departures_search, url: {controller: 'departures_search'}, class: 'hotel-search-form') do |f| %>

              <div class="row tm-form-inner">
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.text_field :start_city, placeholder: 'Pick-up city', class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-6">
                        <%= f.text_field :start_date_date, placeholder: 'Pickup date', class: 'form-control', 'data-provide' => 'datepicker' %>
                      </div>
                      <div class="col-lg-6">
                        <div class='input-group date-hour' id='datetimepicker3'>
                          <%= f.text_field :start_date_time, placeholder: 'Pickup hour', class: 'form-control' %>
                      </div>
                    </div>
                  </div>

                </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.text_field :end_city, placeholder: 'Drop-off city', class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :passengers, placeholder: 'Number of passengers', class: 'form-control', type: 'number' %>
                  </div>
                </div>
              </div>
              <div class="form-group tm-yellow-gradient-bg text-center">
                <%= f.submit 'Check now', class: 'tm-yellow-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>