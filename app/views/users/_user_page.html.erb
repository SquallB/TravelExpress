            </ul>

        </div>
      </div>
    </section>

    <% if user.id == session[:user_id] %>
      <!-- white bg -->
      <section class="section-padding-bottom">
        <div class="container tm-white-bg ">
          <div class="row">
            <div class="tm-section-header section-margin-top">
              <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
              <div class="col-lg-4 col-md-6 col-sm-6"><h2 class="tm-section-title">Your Booked Travels</h2></div>
              <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
                <%= render :partial => 'user_related_departures', :locals => {:departures => user_departures} %>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <!-- white bg -->
    <section class="section-padding-bottom">
      <div class="container tm-white-bg ">
        <div class="row">
          <div class="tm-section-header section-margin-top">
            <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
            <div class="col-lg-4 col-md-6 col-sm-6"><h2 class="tm-section-title"><% if user.id == session[:user_id] %>Your <%end %>Travels</h2></div>
            <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="tm-testimonials-box">
              <h3 class="tm-testimonials-title">Preferences</h3>
              <div class="tm-testimonials-content">
                <% if user.preferences.any?
                    user.preferences.each do |preference| %>
                      <div class="tm-testimonial">
                        <strong class="text-uppercase"><%= preference.title %></strong>
                        <p><%= preference.content %></p>
                      </div>
                <% end
                   end %>
              </div>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="tm-what-we-do-right">
              <div class="row">
                <%= render :partial => 'user_related_departures', :locals => {:departures => departures} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
