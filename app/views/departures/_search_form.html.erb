<div class="row">

  <div class="col-lg-12">
    <!-- Nav tabs -->
    <div class="tm-home-box-research tm-home-box-1-center">
      <ul class="nav nav-tabs tm-white-bg" role="tablist" id="hotelCarTabs">
        <li role="presentation" >
          <a href="#car" aria-controls="car" role="tab" class="active">Research Travel</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade tm-white-bg active in" id="car">
          <div class="tm-search-box effect2">

            <%= form_tag '/departures/search', method: :get do %>
              <div class="row tm-form-inner">
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= text_field_tag :start_city, params[:start_city], placeholder: 'Pick-up city', class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-6">
                        <%= text_field_tag :start_time_date, params[:start_time_date], placeholder: 'Pickup date', class: 'form-control', 'data-provide' => 'datepicker' %>
                      </div>
                      <div class="col-lg-6">
                        <div class='input-group date-hour' id='datetimepicker3'>
                          <%= text_field_tag :start_time_time, params[:start_time_time], placeholder: 'Pickup hour', class: 'form-control' %>
                      </div>
                    </div>
                  </div>

                </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= text_field_tag :end_city, params[:end_city], placeholder:'Drop-off city', class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= text_field_tag :passengers, params[:passengers], placeholder: 'Number of passengers', class: 'form-control', type: 'number' %>
                  </div>
                </div>
              </div>
              <div class="form-group tm-yellow-gradient-bg text-center">
                <%= submit_tag 'Check now', class: 'tm-yellow-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>