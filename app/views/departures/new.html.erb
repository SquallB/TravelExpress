<% provide(:title, 'Publish Travel') %>

<%= render 'error_messages' %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <!-- Nav tabs -->
      <div class="tm-home-box-research tm-home-box-1-center">
        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane fade tm-white-bg active in" id="car">
            <div class="tm-search-box effect2">
              <%= form_for :departure, :url=>{:controller => 'departures', :action => 'create'}, class: 'hotel-search-form' do |f| %>
                <div class="row tm-form-inner">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :start_address, 'Pick-up address' %>
                      <%= f.fields_for @departure.start_address do |start_address_form| %>
                          <%= start_address_form.text_field :line1, placeholder: 'Address line 1', class: 'form-control' %>
                          <%= start_address_form.text_field :line2, placeholder: 'Address line 2', class: 'form-control' %>
                          <%= start_address_form.text_field :zip, placeholder: 'zip', class: 'form-control' %>
                          <%= start_address_form.text_field :city, placeholder: 'City', class: 'form-control' %>
                          <%= start_address_form.text_field :state, placeholder: 'State', class: 'form-control' %>
                      <% end %>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="input-append date form_datetime">
                            <%= f.text_field :start_time_date, placeholder: 'Pickup Date', class: 'form-control', 'data-provide' => 'datepicker' %>
                          </div>
                        </div>
                        <div class="col-lg-3">
                          <div class='input-append date-hour form_datetime_hour'>
                            <%= f.select :start_time_hour, 0..23, {}, class: 'form-control' %>
                          </div>
                        </div>
                        <div class="col-lg-3">
                          <div class='input-append date-hour form_datetime_hour'>
                            <%= f.select :start_time_min, [00, 15, 30, 45], {}, class: 'form-control' %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.select :frequency, ['--Frequency--', 'One time', 'Daily', 'Monthly', 'Other'], {}, class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :end_address, 'Drop-off address' %>
                      <%= f.fields_for :end_address  do |end_address_form| %>
                          <%= end_address_form.text_field :line1, placeholder: 'Address line 1', class: 'form-control' %>
                          <%= end_address_form.text_field :line2, placeholder: 'Address line 2', class: 'form-control' %>
                          <%= end_address_form.text_field :zip, placeholder: 'Zip', class: 'form-control' %>
                          <%= end_address_form.text_field :city, placeholder: 'City', class: 'form-control' %>
                          <%= end_address_form.text_field :state, placeholder: 'State', class: 'form-control' %>
                      <% end %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :passenger_capacity, placeholder: 'Number of passengers', class: 'form-control', type: 'number' %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :price, placeholder: 'Price', class: 'form-control', type: 'number', min: '5' %>
                    </div>
                  </div>
                </div>
                <div class="form-group tm-yellow-gradient-bg text-center">
                  <%= f.submit 'Publish trip', class: 'tm-yellow-btn' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  </div>
  <!--End Container -->